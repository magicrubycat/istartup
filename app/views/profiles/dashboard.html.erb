<div class="grid-container">
  <div class="user_sectors">

    <div class="container box">
      <%= render 'card-grid-interests' %>
        <ul>
      <% @interests.each do |interest| %>
     <li> <%= interest.name %> </li>
    <% end %>
    </ul>

    <%= link_to "Edit interests", sectors_path %>
    </div>


  </div>
  <div class="favorites">
    <%= render 'card-grid-favorites' %>

    <% if current_user.photo.attached? %>
    <%= cl_image_tag current_user.photo.key, height: 40, width: 40, crop: :fill %>
    <% end %>
    <ul>
      <% @favorites.each do |favorite| %>
      <li> <%= link_to favorite.name, startup_path(favorite) %> </li>
      <% end %>
    </ul>
  </div>
  <div class="applications">
    <%= render 'card-grid-applications' %>
  <!--  Here will be the applications (cards) that the user already sent
  - add cards (100px x 100px) with company name, logo, date when the application was sent -->
  </div>
</div>
