<% content_for :meta_title, "Dashboard" %>
<%= render 'dashboard-banner' %>

<div class="dashboard-flexbox1">
  <div class="overview-applications">
    <h1>Let's find your track, <%= current_user.first_name.capitalize %>!</h1>
    <p>Manage your interests, favorite companies and applications in your personal dashboard</p>
  </div>
    <div class="dashboard-personal-information">
      <div style="margin-bottom: 15px;"><%= render 'shared/avatar' %></div>
      <div style="left:50%; right:50%;"><%= current_user.first_name.capitalize %><%= current_user.last_name.capitalize %></div>

      <span style="left:50%; right:50%; margin-bottom: 15px;"><i class="fas fa-map-marker-alt" style="color: #52A87C"></i></span>
      <div style="left:50%; right:50%; margin-bottom: 15px;"><%= link_to "Edit personal information", href="edit_profile_path", class:"btn btn-ghost" %></div>
    </div>
</div>

<div class="overview-applications">
<%= render 'dashboard-interests' %>
</div>


<div class="d-flex overview-applications">

  <%= render 'dashboard-favorites' %>

  <%= render 'dashboard-applications' %>

</div>
