<div class="container box-application">
<div class="container">
  <h2 style="color:#50A87C; margin-bottom: 20px; text-align: center">Personalize your application for <%= @application.startup.name %></h2>

<div style= "align-items=center">
  <div>
    <%= simple_form_for @application, url: application_path(@application), method: :patch do |f| %>
    <%= f.input :content, as: :text, input_html: { value: f.object.content, :rows => 20 }, label: false %>
    <%= f.submit "Save changes", class: "btn btn-ghost" %>
    <% end %>
  </div>
  <%= link_to "Go back", application_path(@application), class: "btn btn-outline-primary" %>
</div>
</div>
</div>
