<div class="container" style= "margin-top: 30px">
  <div class="container box-card-index">
    <h2 style="color:#50A87C;">Your chosen interests:</h2>
    <% current_user.sectors.each do |sector| %>
    <%= sector.name %>
    <% end %>
  </div>
  <div class="container box-card-index">
    <h3>Here are <%= @startups.count %> startups matching your interests:</h3>
    <div>
      <%= simple_form_for :search, url: startups_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search startup" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i>
        </button>
      </div>
      <% end %>
    </div>

    <div class="startup-cards">
      <% @startups.each do |startup| %>
        <div class="card-codepen position-relative">
          <%= link_to startup_path(startup) do %>
          <%= render 'startups/card-startup-index', startup: startup, name: startup.name.capitalize, address: startup.address.capitalize, email: startup.email, website: startup.website, description: startup.description.capitalize %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>


