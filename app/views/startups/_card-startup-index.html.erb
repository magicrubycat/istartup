<div class="center">
  <div class="card green">
    <div class="additional">
      <div class="startup-card-index">
        <div class="sectors center">
          <% startup.sectors.each do |sector| %>
          <p style="font-size:small; color:white"> <%= sector.name.capitalize %> </p>
          <img src="<%= startup.logo_url %>" alt="Startup Missing Logo" class="startup-logo">
        <% end %>
        </div>

      </div>
      <div class="more-info">
        <h1><%= name %></h1>
        <div class="coords">
          <span><i class="fas fa-map-marker-alt" style="color: white"></i></span>
          <span><%= address %></span>
        </div>
        <div class="coords">
          <span><i class="fas fa-envelope" style="color: white"></i></span>
          <span><%= email %></span>
        </div>
        <div class="coords">
          <span><i class="fas fa-external-link-alt" style="color: white"></i></span>
          <span><%= website %></span>
        </div>
      </div>
    </div>
    <div class="general">
      <h1><%= name %></h1>
      <p><%= truncate(description, length: 170) %></p>
      <span class="more"><i class="fas fa-users" style="color: gray"></i></span>
    </div>
  </div>

</div>
